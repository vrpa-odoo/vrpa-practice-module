<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="document_upload_view_form" model="ir.ui.view">
        <field name="name">List View</field>
        <field name="model">document.document</field>
        <field name="arch" type="xml">
            <tree>
                <field name="document_name" />
                <field name="weekly_report_upload"/>
                <field name="week_report_no"/>
            </tree>
        </field>
    </record>


    <record id="desk_list_form" model="ir.ui.view">
        <field name="name">List View</field>
        <field name="model">document.document</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="document_name" invisible='1' />
                        <field name="weekly_report_upload" widget="binary" filename="document_name" />
                        <field name="week_report_no"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo> 
        