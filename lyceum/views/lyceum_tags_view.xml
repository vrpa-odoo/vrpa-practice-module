<?xml version="1.0"?>
<odoo>
    <record id="lyceum_tags_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">lyceum.tags</field>
        <field name="view_mode">tree,form</field>
    </record>

   
    <record id="lyceum_tags_view_tree" model="ir.ui.view">
        <field name="name">lyceum.tags.tree.view</field>
        <field name="model">lyceum.tags</field>
        <field name="arch" type="xml">
            <tree string="color" editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </tree> 
        </field>
    </record>
    
</odoo>